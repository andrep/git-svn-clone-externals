#!/bin/bash

toplevel_directory="$(git rev-parse --show-cdup)"
[ -n "$toplevel_directory" ] && { echo "please run from the toplevel directory"; exit 1; }

find .git_externals -type d -name .git | while read gitdir; do
	dir=$(dirname "$gitdir")
    if [ -d $dir ]; then
	pushd $dir
	echo $dir
	git svn fetch
	git svn rebase
	popd
    fi
done
